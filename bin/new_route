#!/bin/bash

## "bin" : { "my-program" : "./path/to/program" }

if [ ! -d handlebars ]
then
mkdir handlebars
fi

if [ ! -d route_handlers ]
then
mkdir route_handlers
fi

if [ ! -f "handlebars/$1.hbs" ]
then
echo "<h1>$1</h1>" >> "handlebars/$1.hbs"
fi

if [ ! -f "route_handlers/$1.js" ]
then
echo "" >> "route_handlers/$1.js"
fi
